<style type="text/css">
        .card {
            width: 50%;
            display:flex;
            justify-content: center;
            flex-direction: column; 
            box-shadow: 0 4px 8px #999;
            box-sizing: content-box;
            border-radius: 5px;
            border: 1px solid #222;
        }

        .card label:first-child {
            margin-top: 30px;
        }
        
        form { margin: 0 auto; }
        
        input, textarea { 
            width: 95%; 
            margin: 0px auto 1rem; 
            max-width: cover; 
            padding: 8px; 
            font:1rem sans-serif;
        }

        h2 {
            font-family:'Lucida Sans', sans-serif;
            font-size: 17pt;
            margin: 30px 0 10px 20px;
        }

        h4 {
            font-family:'Lucida Sans', sans-serif;
            font-size: 11pt;
            display: inline-block;
            padding-bottom: 5px;
            margin: 0 10px 0 20px;
        }
        
        button {
            background-color: white;
            cursor: pointer;
            border: 1px solid #222;
            width: 50%;
            margin: 0 auto 20px;
            padding: 0.5rem;
            border-radius: 5px;
        }

        button:hover {
            background-color: #222;
            cursor: pointer;
            border: 1px solid white;
            color: white; 
        }

        *, *:before, *:after { box-sizing: inherit; box-sizing: border-box; }

        .alert {
            text-align: center;
            color: red;
            padding: 10px;
            width: 100%;
            margin: auto 5px;
        }

</style>

<form class="card" action='/quest/post/add' method="post">
    <input type="hidden" name="id" value="{{questionario._id}}"></input>
    <h2 for="titulo">{{questionario.titulo}}</h2>
    
    <h4 for="usuario">Usuário: {{questionario.nome}}</h4>

    <h4 for="data">Criação: {{questionario.data}}</h4>
    
    <h4 for="pergunta">Pergunta:</h4>
    <textarea type="text" name="pergunta" id="pergunta"></textarea>
   
    <button type="submit">Responder questionário</button>
</form>